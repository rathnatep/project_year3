# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
DB_TYPE=sqlite
DB_SQLITE_PATH=./data/classroom.db

# For PostgreSQL (optional, future use)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=classroom_db
# DB_USER=postgres
# DB_PASSWORD=password

# File Upload Configuration
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,application/zip

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLED=true

# API Configuration
API_TIMEOUT=10000
API_RETRIES=3